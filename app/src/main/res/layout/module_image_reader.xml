<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/imageRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <the.one.base.widge.ScaleImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bg_image"
        android:scaleType="center" />

    <com.qmuiteam.qmui.widget.QMUIProgressBar
        android:id="@+id/progressBar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:textDirection="firstStrongLtr"
        android:visibility="gone"
        app:qmui_background_color="@color/qmui_config_color_10_pure_black"
        app:qmui_progress_color="@color/colorPrimary"
        app:qmui_stroke_width="2dp"
        app:qmui_type="type_circle"
        app:qmui_value="0" />

</RelativeLayout>