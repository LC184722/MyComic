<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_marginTop="5dp"
        android:padding="8dp"
        app:qmui_borderColor="@color/lightGray"
        app:qmui_borderWidth="2dp"
        app:qmui_radius="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp">

            <RelativeLayout
                android:id="@+id/imageRelativeLayout"
                android:layout_width="120dp"
                android:layout_height="160dp">

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                    android:id="@+id/imageView"
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:background="@drawable/ic_image_background"
                    app:qmui_border_width="0dp"
                    app:qmui_corner_radius="@dimen/dp_10" />

                <com.qmuiteam.qmui.widget.QMUIProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:textDirection="firstStrongLtr"
                    app:qmui_background_color="@color/qmui_config_color_10_pure_black"
                    app:qmui_progress_color="@color/colorPrimary"
                    app:qmui_stroke_width="2dp"
                    app:qmui_type="type_circle"
                    app:qmui_value="0" />

            </RelativeLayout>

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_4"
                android:gravity="center"
                app:qmui_backgroundColor="@color/qmui_config_color_blue"
                app:qmui_radius="13dp">

                <TextView
                    android:id="@+id/tvIndex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="@color/white" />

            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="标题"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="作者" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvUpdateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="0dp"
                    android:gravity="end"
                    android:text="更新：NULL" />
            </RelativeLayout>

        </LinearLayout>


    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>


</LinearLayout>
